---
// Hero.astro
import Button from './Button.astro';
import kingsCanyonFilm from '../assets/kings_canyon_film.jpg';
import { Image } from 'astro:assets';
---
<section class="min-h-screen bg-background-900 flex items-center justify-center px-4">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-12">
    <div class="md:w-2/3 text-center md:text-left">
      <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-6">
        Hi, I'm <span class="text-accent-500">Steven</span>
        <br />
        Software Engineer
      </h1>
      <p class="text-background-400 text-lg mb-8">
        Crafting digital experiences through clean and efficient code. Architecting scalable solutions across the full technology stack.
      </p>
      <Button href='/projects'>
        View My Work
      </Button>
    </div>
    
    <div class="md:w-1/3 flex justify-center">
      <div class="w-96 h-96 rounded-full overflow-hidden border-4 border-accent-500 shadow-lg shadow-accent-500/50">
        <!-- Replace src with your headshot -->
        <Image 
          src={kingsCanyonFilm}
          alt="Developer headshot"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>

</section>
