---
// Hero.astro
import Button from './Button.astro';
---
<section class="min-h-screen bg-gray-900 flex items-center justify-center px-4">
  <div class="max-w-6xl mx-auto flex flex-col lg:flex-row items-center gap-12">
    <div class="lg:w-5/8 text-center lg:text-left">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        Hi, I'm <span class="text-purple-500">Steven</span>
        <br />
        Software Engineer
      </h1>
      <p class="text-gray-400 text-lg mb-8">
        Crafting digital experiences through clean and efficient code. Architecting scalable solutions across the full technology stack.
      </p>
      <Button href='/projects'>
        View My Work
      </Button>
    </div>
    
    <div class="lg:w-3/8 flex justify-center">
      <div class="w-96 h-96 rounded-full overflow-hidden border-4 border-purple-500 shadow-lg shadow-purple-500/50">
        <!-- Replace src with your headshot -->
        <img 
          src="https://picsum.photos/800"
          alt="Developer headshot"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>

  <!-- Optional decorative elements -->
  <div class="absolute top-20 left-20 w-2 h-2 bg-purple-500 rounded-full animate-pulse"></div>
  <div class="absolute bottom-20 right-40 w-3 h-3 bg-purple-400 rounded-full animate-pulse"></div>
</section>
