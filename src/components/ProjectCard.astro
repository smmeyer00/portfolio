---
interface Props {
    title: string;
    description: string;
    tags: string[];
    image: string;
    slug: string;
}

const { title, description, tags, image, slug } = Astro.props;
---

<a 
    href={`/projects/${slug}`}
    class="group bg-background-800 rounded-lg overflow-hidden transition-transform hover:-translate-y-2 duration-300"
>
    <div class="aspect-video overflow-hidden">
        <img 
            src={image} 
            alt={title} 
            class="w-full h-full object-cover transition-transform group-hover:scale-105 duration-300"
        />
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold text-foreground mb-2">{title}</h3>
        <p class="text-background-300 mb-4 line-clamp-2">{description}</p>
        <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
                <span class="px-3 py-1 bg-background-700 text-background-300 text-sm rounded-full">
                    {tag}
                </span>
            ))}
        </div>
    </div>
</a>
