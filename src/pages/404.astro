---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout pageTitle="404 - Page Not Found">
    <div class="min-h-screen pt-24 px-4 flex items-center justify-center">
        <div class="max-w-2xl mx-auto text-center">
            <div class="relative mb-8">
                <h1 class="text-8xl md:text-9xl font-bold text-accent-500 mb-4 animate-pulse">404</h1>
                <div class="absolute inset-0 bg-accent-500/20 blur-3xl -z-10"></div>
            </div>
            
            <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4">
                Page Not Found
            </h2>
            
            <p class="text-background-300 mb-8 max-w-md mx-auto">
                Looks like you've ventured into uncharted territory. The page you're looking for doesn't exist or has been moved.
            </p>

            <Button href="/">
                Return Home
            </Button>
        </div>
    </div>
</BaseLayout>
