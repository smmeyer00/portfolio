---
import BaseLayout from '../layouts/BaseLayout.astro';
import {Icon} from 'astro-icon/components';

const contactMethods = [
    {
        name: 'Email',
        value: 'smmeyer00@gmail.com',
        href: 'mailto:smmeyer00@gmail.com',
        icon: 'mdi:email'
    },
    {
        name: 'LinkedIn',
        value: 'in/smmeyer00',
        href: 'https://linkedin.com/in/smmeyer00',
        icon: 'mdi:linkedin'
    },
    {
        name: 'GitHub',
        value: 'smmeyer00',
        href: 'https://github.com/smmeyer00',
        icon: 'mdi:github'
    }
];
---

<BaseLayout pageTitle="Contact">
    <section class="min-h-screen pt-24 px-4 overflow-hidden">
        <div class="max-w-3xl mx-auto relative">
            <!-- Decorative elements -->

            <div class="relative">
                <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-6 text-center">
                    Get in Touch
                </h1>
                <p class="text-background-300 text-center mb-12 max-w-xl mx-auto">
                    Have a question or want to work together? Feel free to reach out through any of these channels or send me a message directly.
                </p>

                <!-- Contact Methods -->
                <div class="grid gap-4 mb-12">
                    {contactMethods.map(method => (
                        <a
                            href={method.href}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group bg-background-800/50 backdrop-blur-sm p-4 rounded-lg flex items-center gap-4 hover:bg-background-800 transition-all duration-300 hover:-translate-y-1"
                        >
                            <div class="p-2 bg-background-700 rounded-lg text-accent-500 group-hover:scale-110 transition-transform duration-300">
                                <Icon name={method.icon} class="w-6 h-6" />
                            </div>
                            <div>
                                <div class="text-sm text-background-400">{method.name}</div>
                                <div class="text-foreground font-medium">{method.value}</div>
                            </div>
                        </a>
                    ))}
                </div>

                <!-- Separator -->
                <div class="flex items-center gap-4 mb-12">
                    <div class="h-px bg-gradient-to-r from-transparent via-background-700 to-transparent flex-1"></div>
                    <span class="text-background-400 text-sm font-medium px-2">Or</span>
                    <div class="h-px bg-gradient-to-r from-transparent via-background-700 to-transparent flex-1"></div>
                </div>

                <!-- Contact Form -->
                <form
                    action="https://api.web3forms.com/submit"
                    method="POST"
                    class="space-y-6"
                >
                    <input type="hidden" name="access_key" value="19ee3aeb-959c-4173-a8ad-bcb6c5bde81e" />
                    
                    <div class="group">
                        <input 
                            type="text" 
                            name="name" 
                            required
                            placeholder="Your Name"
                            class="w-full bg-background-800/50 backdrop-blur-sm border border-background-700 rounded-lg px-4 py-3 text-foreground placeholder:text-background-400 focus:outline-none focus:border-accent-500 focus:ring-1 focus:ring-accent-500 transition-all duration-300"
                        />
                    </div>

                    <div class="group">
                        <input 
                            type="email" 
                            name="email" 
                            required
                            placeholder="Your Email"
                            class="w-full bg-background-800/50 backdrop-blur-sm border border-background-700 rounded-lg px-4 py-3 text-foreground placeholder:text-background-400 focus:outline-none focus:border-accent-500 focus:ring-1 focus:ring-accent-500 transition-all duration-300"
                        />
                    </div>

                    <div class="group">
                        <textarea 
                            name="message" 
                            required
                            placeholder="Your Message"
                            rows="5"
                            class="w-full bg-background-800/50 backdrop-blur-sm border border-background-700 rounded-lg px-4 py-3 text-foreground placeholder:text-background-400 focus:outline-none focus:border-accent-500 focus:ring-1 focus:ring-accent-500 transition-all duration-300 resize-none"
                        ></textarea>
                    </div>

                    <!-- Bot Protection -->
                    <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

                    <button
                        type="submit"
                        class="w-full bg-accent-500 text-foreground py-3 rounded-lg hover:bg-accent-600 hover:cursor-pointer transition-colors duration-300 font-medium"
                    >
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus {
        -webkit-text-fill-color: #fff;
        -webkit-box-shadow: 0 0 0px 1000px rgb(30 41 59 / 0.5) inset;
        transition: background-color 5000s ease-in-out 0s;
    }
</style>
