---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const navigationItems = [
	{ label: "Home", href: "/" },
	{ label: "About", href: "/about" },
	{ label: "Projects", href: "/projects" },
	{ label: "Contact", href: "/contact" },
];

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body class="bg-background-900">
		<div
			class='absolute top-0 right-0 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl'>
		</div>
		<div
			class='absolute bottom-0 right-0 md:right-1/6 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl'>
		</div>
		<div
			class='absolute top-0 left-0 md:left-1/6 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl'>
		</div>
		<div
			class='absolute bottom-0 left-0 w-96 h-96 bg-accent-500/5 rounded-full blur-3xl'>
		</div>
		<div
			class='absolute top-20 left-20 w-2 h-2 bg-accent-500 rounded-full animate-pulse'>
		</div>
		<div
			class='absolute bottom-20 right-40 w-3 h-3 bg-accent-400 rounded-full animate-pulse'>
		</div>
		<div
			class='absolute top-40 left-10 w-2 h-2 bg-accent-500 rounded-full animate-pulse'>
		</div>
		<div
			class='absolute top-60 right-20 w-3 h-3 bg-accent-400 rounded-full animate-pulse delay-150'>
		</div>
		<div
			class='absolute bottom-20 left-1/4 w-2 h-2 bg-accent-500 rounded-full animate-pulse delay-300'>
		</div>
		<Navbar navItems={navigationItems} />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
